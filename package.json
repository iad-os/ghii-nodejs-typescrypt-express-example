{
  "name": "ghii-ts-express-example",
  "version": "0.1.0",
  "description": "A starting point for Node.js express apps with TypeScript",
  "author": "Daniele Fiungo",
  "license": "MIT",
  "main": "./dist/index.js",
  "repository": {},
  "engines": {
    "node": ">=14",
    "npm": ">=6.4.1"
  },
  "scripts": {
    "build": "npm run clean && npm run build-ts && npm run lint",
    "clean": "rimraf dist",
    "build-ts": "tsc",
    "debug": "npm run build-ts && npm run watch-debug",
    "lint": "tsc --noEmit && eslint \"src/**/*.{js,ts}\" --fix",
    "serve": "node dist/index.js",
    "serve-debug": "nodemon --inspect dist/index.js",
    "start": "npm run serve",
    "jest": "jest --watch --verbose",
    "test": "jest --forceExit --coverage --verbose",
    "watch": "concurrently -k -p \"[{name}]\" -n \"srv,tsc\" -c \"yellow.bold,cyan.bold\" -i \"npm run watch-node\" \"npm run watch-ts\" ",
    "watch-debug": "concurrently -k -i -p \"[{name}]\" -n \"srv,tsc\"  -c \"yellow.bold,cyan.bold\" \"npm run serve-debug\" \"npm run watch-ts\" ",
    "watch-node": "nodemon dist/index.js",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w"
  },
  "dependencies": {
    "@ghii/ghii": "0.0.6",
    "@ghii/http-loader": "0.0.2",
    "@ghii/yaml-loader": "0.0.2",
    "@godaddy/terminus": "^4.4.1",
    "body-parser": "^1.19.0",
    "celebrate": "^13.0.4",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express-async-errors": "^3.1.1",
    "express-pino-logger": "^5.0.0",
    "helmet": "^4.2.0",
    "http-status": "^1.5.0",
    "joi": "^17.3.0",
    "lodash": "^4.17.20",
    "pino": "^6.7.0",
    "pino-pretty": "^4.3.0",
    "tslib": "^2.0.3",
    "wait-on": "^5.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.8",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.9",
    "@types/express-pino-logger": "^4.0.2",
    "@types/jest": "^26.0.15",
    "@types/lodash": "^4.14.167",
    "@types/node": "^12.19.6",
    "@types/supertest": "^2.0.10",
    "@types/wait-on": "^5.2.0",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.0",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "nodemonConfig": {
    "delay": "1000"
  }
}
